@model Asp_Net001.Models.Instituicao

@{
    Layout = Layout;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

    <h4>Instituicao</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" class="form-group col-md-10">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="InstituicaoID" class="control-label"></label>
                    <div class="col-md-offset-2 col-md-10">
                        <input asp-for="InstituicaoID" class="form-control" />
                        <span asp-validation-for="InstituicaoID" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <div class="col-md-offset-2 col-md-10">
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">

                    <label asp-for="Endereco" class="control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Endereco" class="form-control" />
                        <span asp-validation-for="Endereco" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-light">Retorno</a>
                </div>
            </form>
        </div>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
