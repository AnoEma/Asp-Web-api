@model Asp_Net001.Models.Instituicao

@{
    Layout = Layout;
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width">
    <title>Delete</title>
</head>
<body>

    <h3>Tem certeza para apagar?</h3>
    <div>
        <h4>Instituicao</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.InstituicaoID)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.InstituicaoID)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Endereco)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Endereco)
            </dd>
        </dl>

        @using (Html.BeginForm("Delete", "Instituicao", new { instituicaoId = Model.InstituicaoID }, FormMethod.Post))
        {
            <div class="form-actions no-color col-lg-10">
                <input type="submit" value="Apagar" class="btn btn-danger" />
            </div>
        }
        <div class="form-actions no-color col-lg-12">
            <a asp-action="Index" class="btn btn-light">Retorno</a>
        </div>
    </div>
</body>
</html>
